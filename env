export DOTSKY_DIR="${DOTSKY_DIR:-${HOME}/dotsky}"
export DOTSKY_COMMON="${DOTSKY_COMMON:-${DOTSKY_DIR}/common}"
export DOTSKY_PROFILE="${DOTSKY_PROFILE:-$(whoami)}"
export DOTSKY_PROFILE_DIR="${DOTSKY_PROFILE_DIR:-${DOTSKY_DIR}/people/${DOTSKY_PROFILE}}"
export DOTSKY_PROFILE_LOCAL="${DOTSKY_PROFILE_LOCAL:-${DOTSKY_PROFILE_DIR}/local}"
export PATH="$DOTSKY_COMMON/bin:$PATH"
export PATH="$DOTSKY_PROFILE_DIR/bin:$PATH"
export PATH="$DOTSKY_PROFILE_LOCAL/bin:$PATH"

alias dotsky="cd '$DOTSKY_DIR'"
alias dotskyp="cd '$DOTSKY_PROFILE_DIR'"
