#!/usr/bin/env zsh

function launch() {
  kitty @ launch --hold --type=$3 --title=$2 --cwd="$1" zsh -c "$4"
}

function resize() {
  kitty @ resize-window --axis vertical --increment $(kitty @ ls | jq ".[] | select(.is_active == true).tabs | .[] | select(.is_active == true).windows | .[] | $1 - select(.is_active == true).lines")
}

function focus() {
  kitty @ focus-window --match "num:$1"
}

function prompt() {
  local prompt_items=$2
  if [ -z $1 ]; then
    printf "%s\n" ${(P)${prompt_items[@]}} | fzf --reverse --prompt="Select a session > "
  else
    echo "$1"
  fi
}
